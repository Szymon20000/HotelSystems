# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                    controllers.HomeController.index
GET     /messages            controllers.HomeController.messages
GET     /form                controllers.HomeController.form
POST    /upload              controllers.HomeController.upload

GET     /login               controllers.auth.LoginController.get
POST    /login               controllers.auth.LoginController.post

GET     /signup              controllers.auth.SignupController.get
POST    /signup              controllers.auth.SignupController.post

GET     /logout              controllers.auth.LogoutController.get

GET     /guest_contact       controllers.guest_panel.ContactController.get
POST     /guest_contact       controllers.guest_panel.ContactController.post


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
